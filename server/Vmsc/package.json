{
  "name": "Vmsc",
  "displayName": "Vmsc",
  "description": "Lsp server backend for the Vmsc extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vmsc",
        "aliases": [
          "Vmsc",
          "vmsc"
        ],
        "extensions": [
          ".vmsc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vmsc",
        "scopeName": "source.vmsc",
        "path": "./syntaxes/vmsc.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:vmsc"
  ],
  "files": [
    "bin",
    "out",
    "src"
  ],
  "bin": {
    "vmsc-cli": "./bin/cli"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run build && yarn run lint",
    "build": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "test:mochawesome-screenshots": "mocha --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportName=index,inlineAssets=true,overwrite=true,screenshots=true --timeout 5000 test/suite/*.test.ts",
    "compile": "tsc -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chevrotain": "^10.4.1",
    "commander": "^8.0.0",
    "langium": "~1.0.0",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.17.3",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "langium-cli": "~1.0.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "typescript": "^4.9.4"
  }
}
